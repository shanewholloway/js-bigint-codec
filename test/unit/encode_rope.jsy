function debug_testInt_BE_LE(value, ...answer_be) ::
  console.group @ 'Value: %o', value
  try ::
    answer_be = Uint8Array.from @ answer_be
    const v_be = encodeBigInt(value, false)

    console.log @ 'answer:', hexdbg @ answer_be
    console.log @ 'v_be:', hexdbg @ v_be
    assert.deepEqual @ v_be, answer_be, "Big-endian encoding does not match expected answer"

  finally ::
    console.groupEnd()

function _testInt_BE_LE(value, ...answer_be) ::
  return;
  answer_be = Uint8Array.from @ answer_be
  const answer_le = answer_be.slice().reverse()

  const v_be_imp = encodeBigInt(value)
  const v_be = encodeBigInt(value, false)
  const v_le = encodeBigInt(value, true)

  assert.deepEqual @ v_be, v_be_imp, "Big endian mismatch explicit to implicit"
  assert.deepEqual @ v_be, answer_be, "Big-endian encoding does not match expected answer"
  assert.deepEqual @ v_le, answer_le, "Little-endian encoding does not match expected answer"


function _testUint_BE_LE(value, ...answer_be) ::
  return;
  answer_be = Uint8Array.from @ answer_be
  const answer_le = answer_be.slice().reverse()

  const v_be_imp = encodeBigUint(value)
  const v_be = encodeBigUint(value, false)
  const v_le = encodeBigUint(value, true)

  assert.deepEqual @ v_be, v_be_imp, "Big endian mismatch explicit to implicit"
  assert.deepEqual @ v_be, answer_be, "Big-endian encoding does not match expected answer"
  assert.deepEqual @ v_le, answer_le, "Little-endian encoding does not match expected answer"

